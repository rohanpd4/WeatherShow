<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.logarithm.weatherapp.MainActivity">

    <EditText
        android:id="@+id/city"
        style="@android:style/Widget.Material.EditText"
        android:layout_width="263dp"
        android:layout_height="47dp"
        android:layout_marginBottom="419dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Enter  City"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showWeather"
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_marginBottom="356dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="24dp"
        android:onClick="showWeather"
        android:text="Show Weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <TextView
        android:id="@+id/tempShow"
        android:layout_width="257dp"
        android:layout_height="30dp"
        android:layout_marginBottom="287dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="27dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showWeather"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cloud"
        android:layout_width="256dp"
        android:layout_height="33dp"
        android:layout_marginBottom="247dp"
        android:layout_marginEnd="58dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempShow" />

    <TextView
        android:id="@+id/lon"
        android:layout_width="248dp"
        android:layout_height="44dp"
        android:layout_marginBottom="177dp"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="17dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloud" />

    <TextView
        android:id="@+id/lat"
        android:layout_width="246dp"
        android:layout_height="50dp"
        android:layout_marginBottom="113dp"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="19dp"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lon" />
</android.support.constraint.ConstraintLayout>
